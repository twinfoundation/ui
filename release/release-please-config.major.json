{
	"$schema": "https://raw.githubusercontent.com/googleapis/release-please/main/schemas/config.json",
	"description": "Auto-Generated Release Please configuration for major",
	"pull-request-title-pattern": "chore: major release prepared",
	"pull-request-header": "chore: major release prepared",
	"pull-request-footer": "This PR was generated by the prepare-release GHA",
	"release-type": "node",
	"versioning": "always-bump-major",
	"packages": {
		"packages/ui-tailwind": {
			"package-name": "ui-tailwind",
			"changelog-path": "docs/changelog.md",
			"extra-files": ["src/index.ts"]
		},
		"packages/ui-components-react": {
			"package-name": "ui-components-react",
			"changelog-path": "docs/changelog.md"
		},
		"packages/ui-components-svelte": {
			"package-name": "ui-components-svelte",
			"changelog-path": "docs/changelog.md"
		},
		"apps/ui-storybook-react": {
			"package-name": "ui-storybook-react",
			"changelog-path": "docs/changelog.md"
		}
	},
	"plugins": [
		"node-workspace",
		{
			"type": "linked-versions",
			"groupName": "repo",
			"components": [
				"ui-tailwind",
				"ui-components-react",
				"ui-components-svelte",
				"ui-storybook-react"
			]
		}
	]
}
