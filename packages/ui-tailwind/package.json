{
	"name": "@twin.org/ui-tailwind",
	"version": "0.0.1-next.27",
	"description": "UI package for tailwind",
	"repository": {
		"type": "git",
		"url": "git+https://github.com/twinfoundation/ui.git",
		"directory": "packages/ui-tailwind"
	},
	"author": "martyn.janes@iota.org",
	"license": "Apache-2.0",
	"type": "module",
	"engines": {
		"node": ">=20.0.0"
	},
	"scripts": {
		"clean": "rimraf dist coverage",
		"build": "tsc",
		"build:watch": "tsc-watch --onSuccess \"npm run bundle:esm\"",
		"test": "vitest --run --config ./vitest.config.ts --no-cache",
		"coverage": "vitest --run --coverage --config ./vitest.config.ts --no-cache",
		"bundle:esm": "rollup --config rollup.config.mjs --environment MODULE:esm",
		"bundle:cjs": "rollup --config rollup.config.mjs --environment MODULE:cjs",
		"bundle": "npm run bundle:esm && npm run bundle:cjs",
		"docs:clean": "rimraf docs/reference",
		"docs:generate": "typedoc",
		"docs": "npm run docs:clean && npm run docs:generate",
		"dist": "npm run clean && npm run build && npm run test && npm run bundle && npm run docs"
	},
	"dependencies": {
		"@twin.org/core": "next"
	},
	"devDependencies": {
		"@rollup/plugin-json": "^6.1.0",
		"@twin.org/nameof-vitest-plugin": "next",
		"autoprefixer": "^10.4.20",
		"postcss": "^8.5.1",
		"rimraf": "^6.0.1",
		"rollup": "^4.31.0",
		"rollup-plugin-copy": "^3.5.0",
		"tailwindcss": "^3.4.17",
		"typedoc": "^0.27.6",
		"typedoc-plugin-markdown": "^4.4.1",
		"typescript": "^5.7.3",
		"vitest": "^3.0.3"
	},
	"exports": {
		".": {
			"types": "./dist/types/index.d.ts",
			"require": "./dist/cjs/index.cjs",
			"import": "./dist/esm/index.mjs"
		},
		"./css/*.css": "./dist/css/*.css"
	},
	"files": [
		"dist",
		"docs",
		"locales"
	]
}
