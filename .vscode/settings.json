{
	"eslint.validate": ["javascript", "javascriptreact", "typescript", "typescriptreact", "svelte"],
	"[javascript]": {
		"editor.defaultFormatter": "esbenp.prettier-vscode",
		"editor.tabSize": 2,
		"editor.codeActionsOnSave": {
			"source.fixAll.eslint": "always"
		}
	},
	"[typescript]": {
		"editor.defaultFormatter": "esbenp.prettier-vscode",
		"editor.tabSize": 2,
		"editor.codeActionsOnSave": {
			"source.fixAll.eslint": "always",
			"source.organizeImports": "never"
		}
	},
	"[typescriptreact]": {
		"editor.defaultFormatter": "esbenp.prettier-vscode",
		"editor.tabSize": 2,
		"editor.codeActionsOnSave": {
			"source.fixAll.eslint": "always",
			"source.organizeImports": "never"
		}
	},
	"[svelte]": {
		"editor.defaultFormatter": "svelte.svelte-vscode",
		"editor.tabSize": 2,
		"editor.codeActionsOnSave": {
			"source.fixAll.eslint": "always"
		}
	},
	"prettier.configPath": ".prettierrc",
	"cSpell.autoFormatConfigFile": true,
	"vitest.disableWorkspaceWarning": true,
	"markdownlint.lintWorkspaceGlobs": [
		"**/*.{md,mkd,mdwn,mdown,markdown,markdn,mdtxt,mdtext,workbook}",
		"!**/node_modules",
		"**/docs/reference/**"
	],
	"files.associations": {
		"*.css": "tailwindcss",
		"*.tsx": "typescriptreact"
	},
	"editor.quickSuggestions": {
		"strings": "on"
	},
	"tailwindCSS.includeLanguages": {
		"typescript": "javascript",
		"typescriptreact": "javascript"
	},
	"tailwindCSS.experimental.configFile": {
		"/Users/albertolive/Repos/iota/ui/packages/ui-components-react/tailwind.config.ts": [
			"/Users/albertolive/Repos/iota/ui/packages/ui-components-react/**"
		]
	},
	"tailwindCSS.classAttributes": ["class", "className", "ngClass", ".*Classes.*"]
}
